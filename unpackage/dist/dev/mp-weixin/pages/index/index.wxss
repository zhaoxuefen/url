.content .head {
  display: flex;
}
.content .head .log {
  width: 150rpx;
  height: 50rpx;
}
.content .head .right {
  margin-left: 40%;
  border-radius: 20rpx;
  background: pink;
  padding: 10px;
  opacity: .5;
  border: 1px solid red;
}
.content .head .right text {
  margin-right: 12rpx;
  color: red;
  font-weight: bold;
}
.content .title {
  display: flex;
  margin-top: 15rpx;
  font-size: 14rpx;
  font-weight: bold;
}
.content .title .tit1 {
  margin-left: 15rpx;
}
.content .content {
  width: 100%;
  background: #ccc;
  margin-top: 15rpx;
}
.content .content .title2 {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 15rpx;
}
.content .content .title2 view {
  margin-left: 35rpx;
  margin-top: 15rpx;
}
.content .content .box {
  display: flex;
  flex-wrap: wrap;
}
.content .content .box ._img {
  width: 340rpx;
  height: 200rpx;
}
